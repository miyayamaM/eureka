<% provide(:title, "マイページ") %>

<div class="container">
  <div class="row">
    <div class="col-sm-3" id="profile-sidebar">
      <div class="profile-top">
        <div class="image-round">
          <%= image_tag @user.image.profile100.url, class: "profile-image" %>
        </div>
        <h3><%= @user.name %></h3>
      </div>

      <div class="profile-info">
        <p><%= @user.articles.count %></p>
        <%= link_to "記事を投稿", new_article_path, class: "btn"%>
      </div>
    </div>

    <div class="col-sm-9">
      <% if @user.articles.any? %>
        <ul class="articles">
          <%= render @articles%>
        </ul>
        <%= paginate @articles %>
      <% end %>
      
    </div>
  </div>
</div>
