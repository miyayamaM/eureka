<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-black">
      <div class="icon-wrap navbar-brand">
        <%= link_to image_tag('header-icon.png', :class => "header-icon"), root_path, class: "header-icon" %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="d-flex header-search-form">
          <%= search_form_for @search_words, url: result_path do |f| %>
            <%= f.search_field :title_or_action_text_rich_text_body_or_category_name_or_tags_name_cont, placeholder: "キーワード検索", required: true, class: "form-control", id: "article-search-form" %>
            <%= button_tag :type => "submit", :class => "btn btn-primary mb-1", :id=> "search-button" do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
        </div>

        <div class="dropdown mt-1">
          <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            メニュー
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
            <%= link_to users_path, class: "dropdown-item" do %>
             <i class="fas fa-user-plus mr-1"></i></i>ユーザーを探す
            <% end %>
            <%= link_to user_path(current_user), class: "dropdown-item" do %>
             <i class="fas fa-user mr-1"></i>マイページ
            <% end %>
            <%= link_to edit_user_path(current_user), class: "dropdown-item" do %>
              <i class="fas fa-cog mr-1"></i>ユーザー情報編集
            <% end %>
            <%= link_to logout_path, method: :delete, class: "dropdown-item" do %>
             <i class="fas fa-sign-out-alt mr-1"></i>ログアウト
             <% end %>
          </div>
        </div>
        
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
           <%= link_to users_path, class: "nav-link" do %>
             <i class="fas fa-user-plus mr-1"></i></i>ユーザーを探す
            <% end %>
          </li>
          <li class="nav-item">
           <%= link_to user_path(current_user), class: "nav-link" do %>
             <i class="fas fa-user mr-1"></i>マイページ
            <% end %>
          </li>
          <li class="nav-item">
             <%= link_to edit_user_path(current_user), class: "nav-link" do %>
              <i class="fas fa-cog mr-1"></i>ユーザー情報編集
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to logout_path, method: :delete, class: "nav-link" do %>
             <i class="fas fa-sign-out-alt mr-1"></i>ログアウト
            <% end %>
          </li>
        </ul>


      </div>
    </nav>
</header>