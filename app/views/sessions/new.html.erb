<% provide(:title, "ログイン") %>

<div class="container">
  <div class="form-container">
  <h1 class="mb-4">ログイン</h1>
  <%= form_with(scope: :session, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "form-control" %>
    <p class="mt-3"><%= link_to "パスワードをお忘れですか？", new_password_reset_path %></p>
  </div>

   <%= f.submit "ログインする", class: 'btn btn-scarlet'%>
   <%= link_to "かんたんログイン（レビュー用）",easy_login_path, class: 'btn btn-info'%>
   <p class="mt-3">アカウントをお持ちでない方は<%= link_to "こちら", new_user_path %></p>
   <% end %>
  </div>
</div>
