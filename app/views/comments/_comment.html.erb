<div class="border-bottom comment-item" id="comment-<%= comment.id %>">

  <div class="comment-upper d-flex justify-content-between mt-2">
    <div> 
      <%=image_tag comment.user.image.profile90.url, size: "30x30"%>
      <p class="d-inline comment-username"><%= comment.user.name %></p>
    </div>
    <% if comment.user == current_user %>
      <div>
        <%= link_to icon('fas', 'trash-alt'), comment_path(comment),method: :delete, remote: true, data: { confirm: '削除してよろしいですか？' } %>
      </div>
    <% end %>
  </div>

  <div class="comment-lower">
    <p class="mt-3"><%= comment.content %></p>
    <p class="comment-timestamp text-right"><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
  </div>


</div>